generator client {
  provider = "prisma-client-js" //"-js" added
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id String @id @default(uuid()) //primary key here
  name String //organization name 
  users User[] //one-many relationships
}

model User {
  id String @id @default(uuid()) //User ID
  email String @unique  //Login email
  password String       // Hashed password
  role String           // admin | member roles
  orgId String          
  org Organization @relation(fields: [orgId], references: [id])
}